<div class="user-content">
  <%= render partial: "shared/card", locals: { user: @user } %>
  <div class="bio">
    <p>Bio</p>
    <p><%= @user.bio %></p>
  </div>
  <% @user.posts.each_with_index do |post, index| %>
    <a class="post-card-container" href= <%= user_post_path(@user, post)%>><%= render partial: "shared/post_card", locals: { post: post, index: index + 1 } %></a>
  <% end %>
  <a href= <%= user_posts_path(user_id: @user.id) %> class="see-posts">See all posts</a>
</div>

